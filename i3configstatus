general {
    output_format = "i3bar"
    colors = false
    markup = pango
    interval = 5
}

order += "load"
order += "memory"
order += "wireless wlp0s20f3"
order += "volume master"
order += "battery 0"
order += "time"
load {
    format = "<span color='#006400'>💻</span> %5min"
}

memory {
    format = "<span color='#006400'>🧠</span> %used/%total"
}

battery 0 {
    format = "<span color='#ffff00'>%status</span> %percentage"
    format_down = "No battery"
    status_chr = "⚡"
    status_bat = "🔋"
    status_unk = "?"
    status_full = "☻"
    low_threshold = 10
    integer_battery_capacity = true
}

wireless wlp0s20f3 {
    format_up = "<span color='#00aaff'>📶</span> %essid"
    format_down = "<span color='#00aaff'>❌</span> Disconnected"
}

volume master {
    format = "<span color='#6666ff'>🔊</span> %volume"
    format_muted = "<span color='#6666ff'>🔇</span> Muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

time {
    format = "<span color='#008080'>🕒</span> %b %d %H:%M"
}

